@model UrlShortenerMVC.ViewModels.UrlViewModel

@{
    ViewBag.Title = "Create";
}
@Html.Hidden(ViewBag.Toast as string)
@using (Html.BeginForm("Create", "Urls", FormMethod.Post, new { @class = "form-horizontal container mt-3" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CampaignId)

    <div class="input-group">
        @Html.EditorFor(model => model.LongUrl, new { htmlAttributes = new { @class = "form-control col", placeholder = "Shorten a link" } })
        <div class="input-group-append">
            <button type="submit" class="btn btn-orange rounded-right">SHORTEN</button>
        </div>
    </div>
    @Html.ValidationMessageFor(model => model.LongUrl, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            <a href="@Html.DisplayFor(model => model.ShortUrl)">@Html.DisplayFor(model => model.ShortUrl, new { htmlAttributes = new { @class = "form-control" } })</a>
        </div>
    </div>
}
@if (!string.IsNullOrWhiteSpace(Model.CampaignId))
{
    <div>
        @Html.ActionLink("Back to Options", "AddLinks", "Campaigns", new { campaignId = Model.CampaignId }, null)
    </div>
}

<div class="toast" style="position: absolute; top: 40px; right: 40px; z-index:1000">
    <div class="toast-header bg-pale-red text-pale-red">
        <strong class="mr-auto">Oops!</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body bg-pale-red text-pale-red">
        Something went wrong. We are sorry for the inconvenience...
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/toast-init")
}
