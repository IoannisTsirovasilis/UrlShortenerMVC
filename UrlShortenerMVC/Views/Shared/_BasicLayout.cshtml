<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShortThemUp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="p-0 bg-light">
    <div class="container-fluid body-content d-flex p-0 ">
        @if (User.Identity.IsAuthenticated)
        {
            Html.RenderAction("SideNavbar", "Home");
        }
        <div class="col p-0 d-flex flex-column">
            @if (!User.Identity.IsAuthenticated)
            {
                Html.RenderPartial("_Navbar");
            }
            <div class="mt-5 mx-5 mb-5">
                @RenderBody()
            </div>
            @{ Html.RenderPartial("_Footer"); }
        </div>

    </div>

    @* toast for errors *@
    @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
    {
        <div class="toast" style="position: absolute; top: 40px; right: 40px; z-index:1000">
            <div class="toast-header bg-pale-red text-pale-red">
                <strong class="mr-auto">@ViewBag.Title</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body bg-pale-red text-pale-red">
                @ViewBag.Message
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toast-init")
    @RenderSection("scripts", required: false)
</body>
</html>
