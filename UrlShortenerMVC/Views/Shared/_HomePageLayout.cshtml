<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShortThemUp</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    @Styles.Render("~/Content/homepagelayout")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="keywords" content="shortener, free shortener, link shortener, url shortener, shortthemup, short them up, short link, short url">
    <meta name="description" content="Free Link Shortener">
    <meta name="author" content="ShortThemUp">
    <meta name="robots" content="index">
</head>
<body>
    @{Html.RenderPartial("_Navbar");}

    @RenderBody()

    @{Html.RenderPartial("_IconsGrid");}

    @{Html.RenderPartial("_Footer");}

    @* toast for errors *@
    @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
    {
        <div class="toast" style="position: absolute; top: 40px; right: 40px; z-index:1000">
            <div class="toast-header bg-pale-red text-pale-red">
                <strong class="mr-auto">@ViewBag.Title</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body bg-pale-red text-pale-red">
                @ViewBag.Message
            </div>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
