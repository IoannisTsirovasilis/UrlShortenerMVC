@model UrlShortenerMVC.ViewModels.CampaignViewModel

<h2>Delete Campaign</h2>

<h3>Are you sure? This action will render all links, associated to this campaign, inactive.</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDateString)
        </dt>

        <dd>
            @Model.StartDate.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDateString)
        </dt>

        <dd>
            @Model.EndDate.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Urls)
        </dt>

        <dd>
            @foreach (var u in Model.GetUrls())
            {
                <a href="@u.LongUrl" target="_blank">@u.LongUrl</a>
                @(" - ")
                <a href="@u.ShortUrl" target="_blank">@u.ShortUrl</a><br />
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />           
        </div>
    }
        <div class="mt-2">
            @Html.ActionLink("Back to Campaigns", "Index")
        </div>
</div>
